<canvas id="sign-canvas" style='width:100%; height:100%; border:2px solid #95a5a6; border-style:dashed;'></canvas>
<table style='width:100%;'>
  <tr>
    <td align='left'>
      <button class='{{backBtnClass}}' {{action "back"}}>{{backBtnText}}</button>
    </td>
    <td align='center'>
      <button class='{{clearBtnClass}}' {{action "clear"}}>{{clearBtnText}}</button>
    </td>
    <td align='right'>
      <button class='{{acceptBtnClass}}' {{action "accepted"}}>{{acceptBtnText}}</button>
    </td>
  </tr>
</table>
